<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".NewsApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TinTứcThểThao"
        android:networkSecurityConfig="@xml/network_security_config"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.TinTứcThểThao.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".ui.search.SearchActivity"
            android:exported="false"
            android:label="Tìm kiếm"
            android:theme="@style/Theme.TinTứcThểThao.NoActionBar"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name=".ui.articledetail.ArticleDetailActivity"
            android:exported="false"
            android:label="Chi tiết bài viết"
            android:theme="@style/Theme.TinTứcThểThao.NoActionBar" />

        <activity
            android:name=".ui.matchdetail.MatchDetailActivity"
            android:exported="false"
            android:label="Chi tiết trận đấu"
            android:theme="@style/Theme.TinTứcThểThao.NoActionBar" />

        <activity
            android:name=".ui.teamdetail.TeamDetailActivity"
            android:exported="false"
            android:label="Chi tiết đội bóng"
            android:theme="@style/Theme.TinTứcThểThao.NoActionBar" />
    </application>

</manifest>